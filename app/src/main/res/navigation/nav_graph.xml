<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        tools:layout="@layout/fragment_first"
        android:name="com.zxy.zxymvvm.fragment.FirstFragment"
        android:label="FirstFragment" >
        <action
            android:id="@+id/action_first_to_secoud"
            app:destination="@id/secondFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        tools:layout="@layout/fragment_second"
        android:name="com.zxy.zxymvvm.fragment.SecondFragment"
        android:label="SecondFragment" >
        <action
            android:id="@+id/action_secoud_to_first"
            app:destination="@id/firstFragment"
            app:enterAnim="@anim/in_from_left"
            app:exitAnim="@anim/out_to_right"
            />
        <action
            android:id="@+id/action_secoud_to_home"
            app:destination="@id/homeActivity"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            />
    </fragment>

    <activity
        android:id="@+id/homeActivity"
        android:name="com.zxy.zxymvvm.activity.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" >
    </activity>
</navigation>